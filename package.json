{
  "name": "blade-deployment-template",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "blade",
    "build": "blade build",
    "build:deploy": "blade build",
    "serve": "blade serve",
    "docker:build": "docker build -t qodin .",
    "docker:run": "docker run -d -p 3000:3000 -v blade_data:/usr/src/app/.blade/state -e BLADE_AUTH_SECRET=${BLADE_AUTH_SECRET} -e BLADE_PUBLIC_URL=${BLADE_PUBLIC_URL:-http://localhost:3000} qodin",
    "docker:dev": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    
    "deploy:cloudflare": "node_modules/.bin/wrangler deploy",
    "deploy:railway": "railway up",
    "deploy:fly": "flyctl deploy",
    "deploy:cloudflare:prod": "node_modules/.bin/wrangler deploy --env production",
    
    "setup:railway": "echo 'Install Railway CLI: npm install -g @railway/cli' && echo 'Then run: railway login'",
    "setup:cloudflare": "node_modules/.bin/wrangler login",
    "setup:fly": "echo 'Install flyctl from: https://fly.io/docs/hands-on/install-flyctl/' && echo 'Then run: flyctl auth login'",
    "setup:check": "./scripts/check-deployment-setup.sh",
    "setup:fix": "./scripts/fix-deployment-issues.sh",
    
    "migrate": "blade diff --apply",
    "migrate:check": "blade diff",
    
    "db:status": "blade status",
    "db:backup": "bash scripts/backup-db.sh",
    "db:backup:s3": "bash scripts/backup-to-s3.sh",
    "db:restore": "bash scripts/restore-db.sh",
    "db:sync:upload": "node scripts/sync-remote-storage.js upload",
    "db:sync:download": "node scripts/sync-remote-storage.js download",
    "db:sync:status": "node scripts/sync-remote-storage.js status",
    
    "storage:status": "node scripts/check-storage-status.js"
  },
  "author": "ronin",
  "dependencies": {
    "blade": "3.29.8",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "resend": "^6.5.2",
    "hive": "^2.1.13"
  },
  "devDependencies": {
    "@railway/cli": "^4.11.1",
    "@types/react": "19.2.0",
    "@types/react-dom": "19.2.0",
    "flyctl": "^1.2.6",
    "typescript": "5.9.2",
    "wrangler": "^4.50.0"
  }
}